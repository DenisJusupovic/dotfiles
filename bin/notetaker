#!/bin/sh

noteFilename="$HOME/Documents/notes/note-$(date +%Y-%m-%d).tex"

if [ ! -f $noteFilename ]; then
  echo "\documentclass{article}
  \author{scxrpion}
  \begin{document}
  Notes for  $(date +%H:%M)" > $noteFilename
fi

nvim -c "norm Go" \
  -c "norm Go $(date +%H:%M)" \
  -c "norm G2o" \
  -c "norm zz" \
  -c "startinsert" $noteFilename \
  -c "norm Go \end{document}"

